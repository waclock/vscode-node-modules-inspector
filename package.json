{
  "name": "node-modules-inspector",
  "displayName": "Node Modules Inspector",
  "description": "Inspect node_modules with version info, dependency classification, and smart grouping for monorepos",
  "version": "1.0.0",
  "publisher": "waclock",
  "repository": {
    "type": "git",
    "url": "https://github.com/waclock/vscode-node-modules-inspector"
  },
    "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "node_modules",
    "dependencies",
    "npm",
    "package",
    "version",
    "monorepo"
  ],
  "activationEvents": [
    "workspaceContains:**/node_modules"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "nodeModulesVersions",
          "name": "Node Modules"
        }
      ]
    },
    "commands": [
      {
        "command": "nodeModulesVersions.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "nodeModulesVersions.search",
        "title": "Search Packages",
        "icon": "$(search)"
      },
      {
        "command": "nodeModulesVersions.openPackageJson",
        "title": "Open package.json"
      },
      {
        "command": "nodeModulesVersions.revealInExplorer",
        "title": "Reveal in Explorer"
      },
      {
        "command": "nodeModulesVersions.openInNpm",
        "title": "Open in npm Registry",
        "icon": "$(link-external)"
      }
    ],
    "configuration": {
      "title": "Node Modules Inspector",
      "properties": {
        "nodeModulesInspector.registries": {
          "type": "array",
          "default": [],
          "description": "Custom npm registries to use for 'Open in npm' (checked in order). Each entry should have 'name', 'urlPattern', and optionally 'scopePatterns' to match specific package scopes.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for this registry"
              },
              "urlPattern": {
                "type": "string",
                "description": "URL pattern with {package} placeholder. For scoped packages, {scope} and {name} are also available. Example: https://npm.mycompany.com/{package}/"
              },
              "scopePatterns": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Package scope patterns to match (e.g., '@mycompany/*', '@internal/*'). If empty, matches all packages."
              }
            },
            "required": ["name", "urlPattern"]
          }
        },
        "nodeModulesInspector.fallbackToNpmjs": {
          "type": "boolean",
          "default": true,
          "description": "Fall back to npmjs.com if no custom registry matches the package"
        },
        "nodeModulesInspector.alwaysShowNpmjs": {
          "type": "boolean",
          "default": false,
          "description": "Always show npmjs.com as an option alongside custom registries"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "nodeModulesVersions.search",
          "when": "view == nodeModulesVersions",
          "group": "navigation"
        },
        {
          "command": "nodeModulesVersions.refresh",
          "when": "view == nodeModulesVersions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "nodeModulesVersions.openPackageJson",
          "when": "view == nodeModulesVersions && viewItem == nodeModule",
          "group": "inline"
        },
        {
          "command": "nodeModulesVersions.revealInExplorer",
          "when": "view == nodeModulesVersions && viewItem == nodeModule",
          "group": "navigation"
        },
        {
          "command": "nodeModulesVersions.openInNpm",
          "when": "view == nodeModulesVersions && (viewItem == nodeModule || viewItem == packageGroup)",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "nodeModulesVersions.search",
        "key": "cmd+f",
        "mac": "cmd+f",
        "when": "focusedView == nodeModulesVersions"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "@types/vscode": "^1.107.0",
    "@vscode/vsce": "^3.2.2",
    "typescript": "^5.9.3"
  }
}
