{
  "name": "node-modules-inspector",
  "displayName": "Node Modules Inspector",
  "description": "Inspect node_modules with version info, dependency classification, and smart grouping for monorepos",
  "version": "1.2.2",
  "publisher": "waclock",
  "repository": {
    "type": "git",
    "url": "https://github.com/waclock/vscode-node-modules-inspector"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "node_modules",
    "dependencies",
    "npm",
    "package",
    "version",
    "monorepo"
  ],
  "activationEvents": [
    "workspaceContains:**/node_modules"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "nodeModulesVersions",
          "name": "Node Modules Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "nodeModulesVersions.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "nodeModulesVersions.search",
        "title": "Search Packages",
        "icon": "$(search)"
      },
      {
        "command": "nodeModulesVersions.openPackageJson",
        "title": "Open package.json"
      },
      {
        "command": "nodeModulesVersions.revealInExplorer",
        "title": "Reveal in Explorer"
      },
      {
        "command": "nodeModulesVersions.openInNpm",
        "title": "Open in npm Registry",
        "icon": "$(link-external)"
      }
    ],
    "configuration": {
      "title": "Node Modules Inspector",
      "properties": {
        "nodeModulesInspector.primaryRegistry": {
          "type": "object",
          "default": null,
          "description": "Primary npm registry to try first for 'Open in npm'. Falls back to npmjs.com if not configured or package not found.",
          "properties": {
            "name": {
              "type": "string",
              "description": "Display name for this registry (e.g., 'Internal Registry')"
            },
            "urlPattern": {
              "type": "string",
              "description": "URL pattern with {package} placeholder. Example: https://npm.mycompany.com/{package}/"
            }
          }
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "nodeModulesVersions.search",
          "when": "view == nodeModulesVersions",
          "group": "navigation"
        },
        {
          "command": "nodeModulesVersions.refresh",
          "when": "view == nodeModulesVersions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "nodeModulesVersions.openPackageJson",
          "when": "view == nodeModulesVersions && viewItem == nodeModule",
          "group": "inline"
        },
        {
          "command": "nodeModulesVersions.revealInExplorer",
          "when": "view == nodeModulesVersions && viewItem == nodeModule",
          "group": "navigation"
        },
        {
          "command": "nodeModulesVersions.openInNpm",
          "when": "view == nodeModulesVersions && (viewItem == nodeModule || viewItem == packageGroup)",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "nodeModulesVersions.search",
        "key": "cmd+f",
        "mac": "cmd+f",
        "when": "focusedView == nodeModulesVersions"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && mocha out/test/**/*.test.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.1",
    "@types/vscode": "^1.100.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.2",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  }
}
